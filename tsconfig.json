{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		//для настройки абсолютных импортов
		"baseUrl": ".",
		"paths": {
			"*": [
				"./src/*"
			]
		}
	},
  "include": [
    "src"
  ]
}